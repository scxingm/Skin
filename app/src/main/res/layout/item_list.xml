<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/item_list_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/skin_left_menu_icon"
        />

    <TextView
        android:id="@+id/item_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表textView"
        android:textColor="@color/skin_item_text_color"
        android:layout_toRightOf="@id/item_list_icon"
        android:layout_alignTop="@id/item_list_icon"
        />

    <TextView
        android:id="@+id/item_list_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/skin_item_text_color"
        android:text="测试的啦"
        android:layout_toRightOf="@id/item_list_icon"
        android:layout_alignBottom="@id/item_list_icon"
        />

</RelativeLayout>